#include <LiquidCrystal_I2C.h>


LiquidCrystal_I2C lcd(0x27,16,2);

int seconds = 0;
int minautes = 0;
void setup() {
  Serial.begin(9600);

  lcd.init();
  lcd.clear();         
  lcd.backlight();
}

void loop() {
  delay(1000);
  lcd.clear();
  seconds += 1;
  if (seconds >= 60) {
    minautes += 1;
    seconds = 0;
  }
  if (minautes >= 10) {
    lcd.setCursor(6,0);
    lcd.print(minautes);
  } else {
    lcd.setCursor(6,0);
    lcd.print("0");
    lcd.setCursor(7,0);
    lcd.print(minautes);
  }

  lcd.setCursor(8,0);
  lcd.print(":");

  if (seconds >= 10) {
    lcd.setCursor(9,0);
    lcd.print(seconds);
  } else {
    lcd.setCursor(9,0);
    lcd.print("0");
    lcd.setCursor(10,0);
    lcd.print(seconds);
  }
}
