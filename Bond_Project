#include <Keypad.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,16,2);

const byte ROWS = 4;
const byte COLS = 3;

char hexaKeys[ROWS][COLS] = {
  {'1', '2', '3'},
  {'4', '5', '6'},
  {'7', '8', '9'},
  {'*', '0', '#'}
};

byte rowPins[ROWS] = {9, 8, 7, 6};
byte colPins[COLS] = {5, 4, 3};

Keypad customKeypad = Keypad(makeKeymap(hexaKeys), rowPins, colPins, ROWS, COLS);

String result;
String secretCode;

int attempts = 1;

void setup() {
  Serial.begin(9600);

  lcd.init();
  lcd.clear();         
  lcd.backlight();

  pinMode(11, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(13, OUTPUT);

  lcd.setCursor(0,0);
  lcd.print("Guess the 4 nums");
  lcd.setCursor(0,1);
  lcd.print("or world ends!");

  randomSeed(analogRead(A0));
  secretCode = randomNum();
}

String randomNum() {
  int randNum = random(1000, 10000);
  return String(randNum);
}

bool check(String triedCode, String realCode) {
  if (triedCode == realCode) {
    lcd.clear();
    lcd.setCursor(2,0);
    lcd.print("yahhhhh");
    Serial.println("yahhhhh");
    digitalWrite(13, LOW);
    digitalWrite(12, HIGH);
    digitalWrite(11, LOW);
    return true;
  } else {
    lcd.clear();
    lcd.setCursor(2,0);
    lcd.print("nooooo");
    Serial.println("nooooo");
  }
  if (triedCode > realCode) {
    digitalWrite(11, HIGH);
    digitalWrite(12, LOW);
    digitalWrite(13, LOW);
    return false;
  }

  if (triedCode < realCode) {
    digitalWrite(11, LOW);
    digitalWrite(12, LOW);
    digitalWrite(13, HIGH);
    return false;
  }
    
}

void loop() {
  delay(200);
  digitalWrite(11, LOW);
  digitalWrite(12, LOW);
  digitalWrite(13, LOW);
  char customKey = customKeypad.getKey();

  if (customKey) {
    if (customKey == '*') {
      result.remove(result.length() - 1);
    }
    else {
      result += customKey;
    }
    lcd.clear();
    lcd.setCursor(2,0);
    lcd.print(result);
    Serial.println(result);
  }

  if (result.length() == 4) {
    bool correct = check(result, secretCode);
    if (correct) {
      secretCode = randomNum();
      lcd.clear();
      lcd.setCursor(2,0);
      lcd.print("you made it in: ");
      Serial.print("you made it in: ");
      Serial.print(attempts);
      lcd.clear();
      lcd.setCursor(2,1);
      lcd.print(attempts);
      Serial.println(" attempts");
      attempts = 0;
    } else {
      attempts += 1;
      if (result.toInt() > secretCode.toInt()) {
        lcd.clear();
        lcd.setCursor(2,0);
        lcd.print("Lower!");
        Serial.println("Lower!");
      }
      else {
        lcd.clear();
        lcd.setCursor(2,0);
        lcd.print("Higher!");
        Serial.println("Higher!");
      }
    }
    result = "";
  }
}
